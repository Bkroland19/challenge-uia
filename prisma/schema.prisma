generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String
  phoneNumber String
  password    String
  role        Role     @default(USER)
  policies    Policy[]
  accidents   Accident[]
}


enum Role {
  ADMIN
  USER
}
model Policy {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  renewalAt DateTime
  vehicle   Vehicle?
}

model Accident {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  details   String
  location  String
  images    String[] 
  VehicleNo String?
  createdAt DateTime @default(now())
}


model Vehicle {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  numberPlate String
  policy      Policy? @relation(fields: [policyId], references: [id])
  policyId    String? @db.ObjectId @unique
}
